{
    "manifest_version": 2,
    "name": "Send to d.3",
    "description": "Sends choosen mails to d.3",
    "version": "<VERSION>",
    "author": "<NAME>",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "<YOUR EXTENSION ID>",
            "strict_min_version": "78.10"
        }
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "<YOUR EXTENSION ID>"
        }
    },
    "browser_action": {
        "default_title": "__MSG_browser_action_title__",
        "default_icon": "images/d3.png"
    },
    "background": {
    "scripts": ["background_script.js"]
    },
    "permissions": [
      "messagesRead",
      "nativeMessaging"
    ],
    "icons": {
        "16": "images/d3.png"
    }
}
